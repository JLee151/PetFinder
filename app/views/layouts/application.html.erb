<!DOCTYPE html>
<html>
	<head>
		<title>SaaS App</title>
		<%= csrf_meta_tags %>
		<link href="//fonts.googleapis.com/css?family=Open+Sans:400,700i,800|Roboto" rel="stylesheet">
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
		<nav class="navbar navbar-default navbar-static-top" role="navigation">
			<div class='container'>
				<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<%= link_to root_path, class: "navbar-brand" do %> <!-- <a href="/" class="navbar-brand"><i class="fa fa-group"></i> SaaS Prototype </a> -->
						<i class="fa fa-group"></i>
						SaaS Prototype
					<% end %>
				</div>
				<div class="collapse navbar-collapse" id="main-nav-collapse">
					<div class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
							<%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn" %>
						<% else %>
							<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default navbar-btn" %> <!-- <a href="/users/sign_up" class="btn btn-default navbar-btn">Sign Up</a> -->
							<%= link_to "Log In", new_user_session_path, class: "btn btn-default navbar-btn" %> <!-- <a href="/users/sign_in" class="btn btn-default navbar-btn">Log In</a> -->
						<% end %>
					</div>
					<ul class="nav navbar-nav navbar-right">
						<li><%= link_to "About", about_path %></li>  <!-- <li><a href="/about"> About </a></li> -->
						<li><%= link_to "Contact", new_contact_path %></li>
					</ul>
				</div><!-- /.navbar-collapse -->
			</div>
		</nav>

		<div class="container">
			<% flash.each do |type, msg| %>
					<%= content_tag :div, msg, class: "alert alert-#{type}" %>
			<% end %>
		</div>

		<%= yield %>

	</body>
</html>