<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="text-center">
				<% if params[:plan] == '2' %>
					<h1>Pro Account</h1>
					<p>Sign up for the pro account for $0.01/month to help me!</p>
				<% else %>
					<h1>Basic Account</h1>
					<p> Sign up for free!</p>
				<% end %>
			</div>
			<div class="well">
				<h2>Sign Up</h2>
				<% if params[:plan] == '2' %>
					<%= render "pro_form" %>
				<% else %>
					<%= render "basic_form" %>
				<% end %>

				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>