<div class="container">
	<div class="row">
		<div class="col-md-3 text-center">
			<%= image_tag @user.profile.avatar, class: 'avatar-show-img' %> </br>
		</div>

		<div class="col-md-6">
			<h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></br></h1>
			<h3><span class="pet-type-icon"><%= pet_type_icon %></span> <%= @user.profile.pet_type %></br></h3>
			<div class="well profile-block profile-descrip">
				<h3> Description </h3>
				<%= @user.profile.description %>
			</div>
			<% if current_user.plan_id == 2 %>
				<div class="well profile-block profile-contact">
					<h3> Contact Information </h3>
					<%= @user.profile.phone_number %></br>
					<%= @user.profile.contact_email %>
				</div>
			<% end %>
		</div>
	</div>
</div>